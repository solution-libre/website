#!/usr/bin/env sh

cd "$(dirname "$0")/.." || exit 1


if command -v docker-compose > /dev/null; then
  composer_cmd="./bin/composer"
  npm_cmd="./bin/npm"
elif command -v composer > /dev/null && command -v npm > /dev/null; then
  composer_cmd='composer'
  npm_cmd='npm'
else
  echo 'docker-compose is require'
fi

${composer_cmd} install
${npm_cmd} i
